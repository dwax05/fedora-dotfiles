#!/bin/sh

# Use neovim for vim if present.
[ -x "$(command -v lvim)" ] && alias vim="lvim" vimdiff="lvim -d" && EDITOR='lvim'

# sudo not required for some system commands
for command in yum mount umount sv dnf updatedb su shutdown poweroff reboot ; do
	alias $command="sudo $command"
done; unset command

se() {
	choice="$(find ~/.local/bin -mindepth 1 -printf '%P\n' | fzf)"
	[ -f "$HOME/.local/bin/$choice" ] && $EDITOR "$HOME/.local/bin/$choice"
}

share() {
	choice="$(du -a .local/bin .config | awk '{print $2}' | fzf)"
    [ -f "$choice" ] && link=$(curl -sF "file=@$choice" https://0x0.st)
    wl-copy $link
    echo $link
}

mkcd() {
    mkdir -p "$1"
    cd "$1"
}

goto() {
    cd $1 || zoxide $1
}

e() {
    if [[ -n $1 ]]; then 
        file=$(fd --type file . $1 | fzf)
    else
        file=$(fd --type file | fzf)
    fi
    [[ -n $file ]] && $EDITOR $file
}

greet(){
  # pokemon-colorscripts -r --no-title
  cowsay "$(fortune)"
  cat "$HOME/vimwiki/todo.norg" | grep "(-)\|( )" | grep -o '[[:alpha:]].*' | sed 's/^/- /' | sed "s/{[^}]*}//g" | lolcat -r # line at the end of {} items might be a problem eventually, but why slow it down even more when im already using 5 pipes?
  # cat file | get only todos | remove "(-)" | remove "-" | cut to start | color
}

# Verbosity and settings that you pretty much just always are going to want.
alias \
	cp="cp -iv" \
	mv="mv -iv" \
    rm="rm -vI" \
	mkd="mkdir -pv" \

# Colorize commands when possible.
alias \
	ls="eza --group-directories-first" \
	grep="grep --color=auto" \
	diff="diff --color=auto" \
	ccat="highlight --out-format=ansi" \
    cat="bat -p" \

# These common commands are just too long! Abbreviate them.
alias \
	ka="killall" \
	g="git" \
	lg="lazygit" \
	sdn="shutdown -h now" \
	v="$EDITOR" \
	z="zoxide" \
    nb="newsboat" \
    tm="tmux attach || tmux new-session" \

alias \
    gitc="git clone"

# Replace ls with eza
# alias \
#     ll="eza -l --group-directories-first --icons" \
#     la="eza -Ga --group-directories-first --icons" \
#     lt="eza -lT --group-directories-first --icons" \
#     lta="eza -lTa --group-directories-first --icons" \
#     l="eza -l --group-directories-first --icons"


alias \
    ll="eza -l --group-directories-first" \
    la="eza -Ga --group-directories-first" \
    lt="eza -lT --group-directories-first" \
    lta="eza -lTa --group-directories-first" \
