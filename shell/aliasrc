#!/bin/sh

# Use neovim for vim if present.
[ -x "$(command -v lvim)" ] && alias vim="lvim" vimdiff="lvim -d" && EDITOR='lvim'

# sudo not required for some system commands
for command in yum mount umount sv dnf updatedb su shutdown poweroff reboot ; do
	alias $command="sudo $command"
done; unset command

se() {
	choice="$(find ~/.local/bin -mindepth 1 -printf '%P\n' | fzf --preview='bat -n --color=always ~/.local/bin/{}')"
	[ -f "$HOME/.local/bin/$choice" ] && $EDITOR "$HOME/.local/bin/$choice"
}

share() {
	choice="$(du -a .local/bin .config | awk '{print $2}' | fzf )"
    [ -f "$choice" ] && link=$(curl -sF "file=@$choice" https://0x0.st)
    wl-copy $link
    echo $link
}

mkcd() {
    mkdir -p "$1"
    cd "$1"
}

goto() {
    cd $1 || zoxide $1
}

e() {
    if [[ -n $1 ]]; then 
        file=$(fd --type file . $1 | fzf --preview="bat -n --color=always {}")
    else
        file=$(fd --type file | fzf --preview="bat -n --color=always {}")
    fi
    [[ -n $file ]] && $EDITOR $file
}

greet(){
    # colorscript -r
    pokemon-colorscripts -r --no-title
    # cowsay "$(fortune)"

    # echo "\033[92m--------------------------------------------\033[0m"

    todos=$(cat "$HOME/vimwiki/todo.norg" \
        | grep "(-)\|( )" \
        | grep -o '[[:alpha:]].*' \
        | sed 's/^/- /' \
        | sed "s/{[^}]*}//g")

    case $(cat $HOME/.cache/rice) in
        gruvbox)
            echo $todos
            ;;
        Sakura)
            echo "\033[95m$todos\033[0m"
            ;;
        axenide)
            echo "\033[31m$todos\033[0m"
            ;;
        *)
            echo $todos | lolcat -r
            ;;
    esac
}

# Verbosity and settings that you pretty much just always are going to want.
alias \
	cp="cp -iv" \
	mv="mv -iv" \
    rm="rm -vI" \
	mkd="mkdir -pv" \

# Colorize commands when possible.
alias \
	ls="eza --group-directories-first" \
	grep="grep --color=auto" \
	diff="diff --color=auto" \
	ccat="highlight --out-format=ansi" \
    cat="bat -p" \

# These common commands are just too long! Abbreviate them.
alias \
	ka="killall" \
	g="git" \
	lg="lazygit" \
	sdn="shutdown -h now" \
	v="$EDITOR" \
	z="zoxide" \
    nb="newsboat" \
    tm="tmux attach || tmux new-session" \

alias \
    gitc="git clone"

# fzf stuff
alias \
    pf='fzf --preview="bat -n --color=always {}"'

alias \
    ll="eza -l --group-directories-first" \
    la="eza -Ga --group-directories-first" \
    lla="eza -la --group-directories-first" \
    lt="eza -lT --group-directories-first" \
    lta="eza -lTa --group-directories-first" \
