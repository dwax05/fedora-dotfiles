#!/bin/sh

# WIP

# auto starting apps
wlr-randr --output eDP-1 --scale 1.75 
# wlr-randr --output eDP-1 --scale 2
killall -q spotifyd powerdevil plasma-workspace swaync swayidle swww dunst swww-daemon waybar swaync nm-applet swayidle blueman-applet xdg-desktop-portal xdg-desktop-portal-wlr xdg-desktop-portal-hyprland xdg-desktop-portal-kde

/usr/libexec/xdg-desktop-portal-hyprland &
sleep 2
/usr/lib/xdg-desktop-portal &

waybar -c ~/.config/waybar/river/config.jsonc -s ~/.config/waybar/river/style.css &
swaync &
sh ~/.config/system_scripts/pkill_bc &
$HOME/.local/bin/swww-daemon &
nm-applet --indicator &
blueman-tray
swayidle -w timeout 10 ./wayland_session_lock &

