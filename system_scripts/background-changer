#!/usr/bin/env bash

# wallpapers_path="$HOME/.config/river/backgrounds"
wallpapers_path="$HOME/.local/cringe"


while true; do
  # swaybg -i $(find $wallpapers_path -type f | shuf -n 1) -m fill
  wallpaper=$(find $wallpapers_path -type f | shuf -n 1)
  $HOME/.local/bin/swww img $wallpaper --transition-type wipe --transition-angle 30 --transition-step 90 --transition-fps 60
  ln -s "$wallpaper" $HOME/.cache/currentwallpaper.png
  echo "$wallpaper" > $HOME/.cache/wallpaper
  sleep 14m
done
sleep 1m
