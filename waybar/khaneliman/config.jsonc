    "height": 30,
    "modules-center": [],
    "modules-left": [
        "custom/wlogout",
        "hyprland/workspaces",
        "custom/separator-left",
        "hyprland/window"
    ],
    "modules-right": [
        "tray",
        "custom/separator-right",
        "group/stats",
        "custom/separator-right",
