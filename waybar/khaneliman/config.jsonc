        "return-type": "json",
        "interval": 60,
        "exec": "$HOME/.config/waybar/scripts/github.sh",
        "on-click": "xdg-open https://github.com/notifications"
    },
    "custom/weather": {
        "exec": "$HOME/.config/waybar/scripts/weather.py -l $(jq -r '.weathergov | \"(.location)\"' ~/weather_config.json)",
        "return-type": "json",
        "format": "{}",
        "tooltip": true,
        "interval": 3600
    },
    "group/stats": {
        "orientation": "horizontal",
        "modules": [
            "cpu",
            "memory",
        ]
    },
    "group/notifications": {
        "orientation": "horizontal",
        "modules": [
            "idle_inhibitor",
            "custom/wallpaper",
            "custom/updates",
            "custom/notification",
            "custom/github",
            "wireplumber"
        ]
    },
